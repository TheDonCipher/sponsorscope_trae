# SponsorScope Governance Configuration
# Copy this file to .env and configure as needed

# Kill Switch Configuration
KILL_SWITCH_SCANS=enabled          # enabled/disabled - controls new analysis requests
KILL_SWITCH_READ=enabled           # enabled/disabled - controls all system access
MAINTENANCE_MESSAGE=SponsorScope is currently undergoing scheduled maintenance.

# Rate Limiting Configuration
RATE_LIMIT_RPM=60                  # Requests per minute per IP
RATE_LIMIT_RPH=1000                # Requests per hour per IP  
RATE_LIMIT_RPD=10000               # Requests per day per IP
RAPID_RESUBMISSION_THRESHOLD=5     # Max resubmissions of same handle within window
RAPID_RESUBMISSION_WINDOW=60       # Seconds window for rapid resubmission detection

# Token Management Configuration
DAILY_TOKEN_LIMIT=1000000          # Maximum tokens per day (1M default)
DAILY_SPEND_LIMIT=100.0             # Maximum daily spend in USD ($100 default)
TOKEN_COST_PER_1K=0.01              # Base cost per 1000 tokens ($0.01 default)

# Model-specific token costs (per 1000 tokens)
# These override TOKEN_COST_PER_1K for specific models
GPT4_COST_PER_1K=0.03               # GPT-4 cost per 1000 tokens
GPT35_COST_PER_1K=0.001             # GPT-3.5-turbo cost per 1000 tokens
CLAUDE_COST_PER_1K=0.008            # Claude cost per 1000 tokens

# Redis Configuration (optional - falls back to memory if not available)
REDIS_URL=redis://localhost:6379      # Redis connection URL

# Logging Configuration
GOVERNANCE_LOG_LEVEL=INFO            # Logging level for governance operations
ENABLE_GOVERNANCE_HEADERS=true       # Add governance headers to responses